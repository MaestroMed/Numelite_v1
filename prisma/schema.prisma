generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
}

// ============================================
// AUTHENTICATION & USERS
// ============================================

model User {
  id            String    @id @default(cuid())
  email         String    @unique
  emailVerified DateTime?
  password      String?
  firstName     String?
  lastName      String?
  phone         String?
  address       String?
  city          String?
  postalCode    String?
  avatar        String?
  role          String    @default("client") // client, admin, technician
  referralCode  String?   @unique
  referredById  String?
  createdAt     DateTime  @default(now())
  updatedAt     DateTime  @updatedAt

  accounts      Account[]
  sessions      Session[]
  orders        Order[]
  projects      Project[]
  interventions Intervention[]
  messages      Message[]
  referrals     Referral[]     @relation("referrer")
  referredBy    Referral?      @relation("referred")
  cartItems     CartItem[]
  reviews       Review[]
}

model Account {
  id                String  @id @default(cuid())
  userId            String
  type              String
  provider          String
  providerAccountId String
  refresh_token     String?
  access_token      String?
  expires_at        Int?
  token_type        String?
  scope             String?
  id_token          String?
  session_state     String?

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([provider, providerAccountId])
}

model Session {
  id           String   @id @default(cuid())
  sessionToken String   @unique
  userId       String
  expires      DateTime
  user         User     @relation(fields: [userId], references: [id], onDelete: Cascade)
}

model VerificationToken {
  identifier String
  token      String   @unique
  expires    DateTime

  @@unique([identifier, token])
}

model PasswordResetToken {
  id      String   @id @default(cuid())
  email   String
  token   String   @unique
  expires DateTime
}

// ============================================
// SERVICES & CATALOG
// ============================================

model Service {
  id          String   @id @default(cuid())
  name        String
  slug        String   @unique
  description String
  shortDesc   String?
  category    String   // depannage, website, maintenance
  price       Float
  priceType   String   @default("fixed") // fixed, hourly, monthly, quote
  image       String?
  features    String   // JSON array
  popular     Boolean  @default(false)
  active      Boolean  @default(true)
  sortOrder   Int      @default(0)
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  options    ServiceOption[]
  orderItems OrderItem[]
}

model ServiceOption {
  id          String  @id @default(cuid())
  serviceId   String
  name        String
  description String?
  price       Float
  active      Boolean @default(true)

  service    Service     @relation(fields: [serviceId], references: [id], onDelete: Cascade)
  orderItems OrderItem[]
}

// ============================================
// ORDERS & PAYMENTS
// ============================================

model Order {
  id              String   @id @default(cuid())
  orderNumber     String   @unique
  userId          String?
  guestEmail      String?
  guestPhone      String?
  guestName       String?
  status          String   @default("pending") // pending, confirmed, processing, completed, cancelled
  paymentStatus   String   @default("pending") // pending, paid, partial, refunded
  subtotal        Float
  discount        Float    @default(0)
  tax             Float    @default(0)
  total           Float
  promoCodeId     String?
  notes           String?
  billingAddress  String?
  stripePaymentId String?
  createdAt       DateTime @default(now())
  updatedAt       DateTime @updatedAt

  user      User?       @relation(fields: [userId], references: [id])
  promoCode PromoCode?  @relation(fields: [promoCodeId], references: [id])
  items     OrderItem[]
  payments  Payment[]
  invoice   Invoice?
}

model OrderItem {
  id        String  @id @default(cuid())
  orderId   String
  serviceId String
  optionId  String?
  quantity  Int     @default(1)
  price     Float
  total     Float

  order   Order          @relation(fields: [orderId], references: [id], onDelete: Cascade)
  service Service        @relation(fields: [serviceId], references: [id])
  option  ServiceOption? @relation(fields: [optionId], references: [id])
}

model Payment {
  id              String   @id @default(cuid())
  orderId         String
  amount          Float
  method          String   // stripe, cash, transfer, check
  status          String   @default("pending") // pending, completed, failed, refunded
  stripePaymentId String?
  createdAt       DateTime @default(now())

  order Order @relation(fields: [orderId], references: [id], onDelete: Cascade)
}

model Invoice {
  id            String   @id @default(cuid())
  invoiceNumber String   @unique
  orderId       String   @unique
  pdfUrl        String?
  sentAt        DateTime?
  createdAt     DateTime @default(now())

  order Order @relation(fields: [orderId], references: [id], onDelete: Cascade)
}

model CartItem {
  id        String   @id @default(cuid())
  userId    String
  serviceId String
  optionId  String?
  quantity  Int      @default(1)
  createdAt DateTime @default(now())

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)
}

// ============================================
// QUOTES / DEVIS
// ============================================

model Quote {
  id          String    @id @default(cuid())
  quoteNumber String    @unique
  leadId      String?
  userId      String?
  email       String
  phone       String?
  name        String
  description String
  items       String    // JSON
  subtotal    Float
  discount    Float     @default(0)
  tax         Float     @default(0)
  total       Float
  validUntil  DateTime
  status      String    @default("draft") // draft, sent, viewed, accepted, rejected, expired
  acceptedAt  DateTime?
  pdfUrl      String?
  createdAt   DateTime  @default(now())
  updatedAt   DateTime  @updatedAt

  lead Lead? @relation(fields: [leadId], references: [id])
}

// ============================================
// PROJECTS (Website creation tracking)
// ============================================

model Project {
  id          String   @id @default(cuid())
  userId      String
  orderId     String?
  name        String
  description String?
  status      String   @default("pending") // pending, in_progress, review, completed, on_hold
  progress    Int      @default(0)
  startDate   DateTime?
  dueDate     DateTime?
  completedAt DateTime?
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  user     User          @relation(fields: [userId], references: [id])
  steps    ProjectStep[]
  messages Message[]
}

model ProjectStep {
  id          String    @id @default(cuid())
  projectId   String
  name        String
  description String?
  status      String    @default("pending") // pending, in_progress, completed
  sortOrder   Int
  completedAt DateTime?

  project Project @relation(fields: [projectId], references: [id], onDelete: Cascade)
}

// ============================================
// INTERVENTIONS (Depannage)
// ============================================

model Intervention {
  id           String    @id @default(cuid())
  userId       String?
  leadId       String?
  orderId      String?
  type         String    // diagnostic, repair, installation, maintenance
  description  String
  address      String
  city         String
  postalCode   String
  status       String    @default("pending") // pending, scheduled, in_progress, completed, cancelled
  scheduledAt  DateTime?
  completedAt  DateTime?
  duration     Int?      // minutes
  technicianId String?
  notes        String?
  price        Float?
  createdAt    DateTime  @default(now())
  updatedAt    DateTime  @updatedAt

  user User? @relation(fields: [userId], references: [id])
  lead Lead? @relation(fields: [leadId], references: [id])
}

// ============================================
// LEADS & CRM
// ============================================

model Lead {
  id        String   @id @default(cuid())
  email     String
  phone     String?
  firstName String?
  lastName  String?
  company   String?
  source    String?  // google_ads, organic, referral, direct
  campaign  String?
  medium    String?
  status    String   @default("new") // new, contacted, qualified, proposal, won, lost
  score     Int      @default(0)
  notes     String?
  convertedUserId String?
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  activities    LeadActivity[]
  quotes        Quote[]
  interventions Intervention[]
}

model LeadActivity {
  id        String   @id @default(cuid())
  leadId    String
  type      String   // email, call, meeting, note, status_change
  content   String
  createdAt DateTime @default(now())

  lead Lead @relation(fields: [leadId], references: [id], onDelete: Cascade)
}

// ============================================
// MESSAGES
// ============================================

model Message {
  id        String   @id @default(cuid())
  userId    String?
  projectId String?
  subject   String?
  content   String
  isAdmin   Boolean  @default(false)
  read      Boolean  @default(false)
  createdAt DateTime @default(now())

  user    User?    @relation(fields: [userId], references: [id])
  project Project? @relation(fields: [projectId], references: [id])
}

// ============================================
// REFERRAL PROGRAM
// ============================================

model Referral {
  id           String   @id @default(cuid())
  referrerId   String
  referredId   String   @unique
  status       String   @default("pending") // pending, completed, rewarded
  rewardAmount Float    @default(50)
  rewardedAt   DateTime?
  createdAt    DateTime @default(now())

  referrer User @relation("referrer", fields: [referrerId], references: [id])
  referred User @relation("referred", fields: [referredId], references: [id])
}

// ============================================
// PROMO CODES
// ============================================

model PromoCode {
  id            String    @id @default(cuid())
  code          String    @unique
  description   String?
  discountType  String    // percentage, fixed
  discountValue Float
  minOrder      Float?
  maxUses       Int?
  usedCount     Int       @default(0)
  validFrom     DateTime  @default(now())
  validUntil    DateTime?
  active        Boolean   @default(true)
  createdAt     DateTime  @default(now())

  orders Order[]
}

// ============================================
// REVIEWS
// ============================================

model Review {
  id        String   @id @default(cuid())
  userId    String
  serviceId String?
  rating    Int
  title     String?
  content   String
  approved  Boolean  @default(false)
  featured  Boolean  @default(false)
  createdAt DateTime @default(now())

  user User @relation(fields: [userId], references: [id])
}

// ============================================
// CMS - PAGES & CONTENT
// ============================================

model Page {
  id          String   @id @default(cuid())
  slug        String   @unique
  title       String
  content     String   // JSON blocks
  template    String   @default("default")
  published   Boolean  @default(false)
  publishedAt DateTime?
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  meta PageMeta?
}

model PageMeta {
  id              String  @id @default(cuid())
  pageId          String  @unique
  metaTitle       String?
  metaDescription String?
  metaKeywords    String?
  ogImage         String?
  canonical       String?
  noIndex         Boolean @default(false)
  noFollow        Boolean @default(false)
  schema          String? // JSON-LD

  page Page @relation(fields: [pageId], references: [id], onDelete: Cascade)
}

model BlogPost {
  id          String    @id @default(cuid())
  slug        String    @unique
  title       String
  excerpt     String?
  content     String
  image       String?
  author      String?
  category    String?
  tags        String?   // JSON array
  published   Boolean   @default(false)
  publishedAt DateTime?
  views       Int       @default(0)
  createdAt   DateTime  @default(now())
  updatedAt   DateTime  @updatedAt
}

model Testimonial {
  id        String   @id @default(cuid())
  name      String
  role      String?
  company   String?
  content   String
  rating    Int      @default(5)
  image     String?
  featured  Boolean  @default(false)
  approved  Boolean  @default(true)
  createdAt DateTime @default(now())
}

model FAQ {
  id        String  @id @default(cuid())
  question  String
  answer    String
  category  String?
  sortOrder Int     @default(0)
  active    Boolean @default(true)
}

model Portfolio {
  id          String   @id @default(cuid())
  title       String
  slug        String   @unique
  description String
  image       String?
  gallery     String?  // JSON array of images
  category    String?
  client      String?
  url         String?
  featured    Boolean  @default(false)
  sortOrder   Int      @default(0)
  createdAt   DateTime @default(now())
}

model Media {
  id        String   @id @default(cuid())
  name      String
  url       String
  type      String   // image, video, document
  size      Int
  alt       String?
  folder    String?
  createdAt DateTime @default(now())
}

// ============================================
// MARKETING - EMAIL SEQUENCES
// ============================================

model EmailSequence {
  id          String   @id @default(cuid())
  name        String
  trigger     String   // signup, order, abandoned_cart, inactivity, etc.
  description String?
  active      Boolean  @default(true)
  createdAt   DateTime @default(now())

  steps EmailStep[]
}

model EmailStep {
  id         String  @id @default(cuid())
  sequenceId String
  name       String
  subject    String
  content    String
  delay      Int     // minutes after trigger or previous step
  sortOrder  Int
  active     Boolean @default(true)

  sequence EmailSequence @relation(fields: [sequenceId], references: [id], onDelete: Cascade)
  logs     EmailLog[]
}

model EmailLog {
  id        String    @id @default(cuid())
  stepId    String?
  email     String
  subject   String
  status    String    @default("sent") // sent, delivered, opened, clicked, bounced, failed
  sentAt    DateTime  @default(now())
  openedAt  DateTime?
  clickedAt DateTime?

  step EmailStep? @relation(fields: [stepId], references: [id])
}

// ============================================
// MARKETING - POPUPS
// ============================================

model Popup {
  id          String   @id @default(cuid())
  name        String
  type        String   // exit_intent, scroll, timer, first_visit
  title       String
  content     String
  ctaText     String?
  ctaUrl      String?
  image       String?
  trigger     String   // JSON config
  displayRules String? // JSON - pages, frequency
  active      Boolean  @default(true)
  startDate   DateTime?
  endDate     DateTime?
  views       Int      @default(0)
  conversions Int      @default(0)
  createdAt   DateTime @default(now())
}

// ============================================
// SEO - REDIRECTIONS
// ============================================

model Redirect {
  id        String   @id @default(cuid())
  from      String   @unique
  to        String
  type      Int      @default(301) // 301, 302, 307
  active    Boolean  @default(true)
  createdAt DateTime @default(now())
}

// ============================================
// ANALYTICS & TRACKING
// ============================================

model Conversion {
  id        String   @id @default(cuid())
  type      String   // lead, order, call, whatsapp, newsletter
  source    String?
  campaign  String?
  medium    String?
  value     Float?
  metadata  String?  // JSON
  createdAt DateTime @default(now())
}

model PageView {
  id        String   @id @default(cuid())
  path      String
  referrer  String?
  userAgent String?
  ip        String?
  sessionId String?
  createdAt DateTime @default(now())
}

// ============================================
// SETTINGS
// ============================================

model Setting {
  id        String   @id @default(cuid())
  key       String   @unique
  value     String
  type      String   @default("string") // string, number, boolean, json
  group     String?
  updatedAt DateTime @updatedAt
}

model Notification {
  id        String   @id @default(cuid())
  userId    String?
  type      String   // order, lead, message, system
  title     String
  content   String
  read      Boolean  @default(false)
  actionUrl String?
  createdAt DateTime @default(now())
}

// ============================================
// SCHEDULING / AVAILABILITY
// ============================================

model Availability {
  id        String   @id @default(cuid())
  dayOfWeek Int      // 0-6, 0 = Sunday
  startTime String   // HH:mm
  endTime   String   // HH:mm
  active    Boolean  @default(true)
}

model Booking {
  id           String   @id @default(cuid())
  leadId       String?
  userId       String?
  email        String
  phone        String?
  name         String
  serviceType  String
  date         DateTime
  time         String
  duration     Int      @default(60)
  status       String   @default("pending") // pending, confirmed, cancelled, completed
  notes        String?
  reminderSent Boolean  @default(false)
  createdAt    DateTime @default(now())
}
